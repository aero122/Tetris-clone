unit Main;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Image1: TImage;
    Timer1: TTimer;
    Button1: TButton;
    Button2: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Timer1Timer(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure Draw();
  private
    procedure Loc(l1, t1, l2, t2, l3, t3, l4, t4: byte);
    { Private declarations }
  public
    { Public declarations }
  end;

type
  fig=record
    l1:byte;
    t1:byte;
    l2:byte;
    t2:byte;
    l3:byte;
    t3:byte;
    l4:byte;
    t4:byte;
    vid:byte;
  end;

var
  Form1: TForm1;
  //Игровое поле
  field:array[1..20,1..10] of byte;
  //Фигура
  figure:fig;
implementation

{$R *.dfm}

{Чтобы не забыть:
Одна ячейка фигуры - квадрат 30х30
Поле 10х20}

procedure TForm1.Button1Click(Sender: TObject);//Тестовое заполнение
var
  i: Integer;
  j: Integer;
begin
  field[1,1]:=1;
  field[1,3]:=3;
  field[2,2]:=2;
  field[1,2]:=2;

end;

Procedure TForm1.Loc(l1,t1,l2,t2,l3,t3,l4,t4:byte);
//Задание координат фигуре
begin
  figure.t1:=t1;
  figure.t2:=t2;
  figure.t3:=t3;
  figure.t4:=t4;
  figure.l1:=l1;
  figure.l2:=l2;
  figure.l3:=l3;
  figure.l4:=l4;
end;

procedure TForm1.Button2Click(Sender: TObject);//Создаём фигуру
begin
  figure.vid:=1;
  loc(4,1,5,1,4,2,5,2);
end;

procedure TForm1.FormKeyDown(Sender: TObject; var Key: Word;//При нажатии клавиш клавиатуры
  Shift: TShiftState);
begin
  //ShowMessage(IntToStr(key));
  case key of                      { TODO : Добавить проверку на фигуру справа-слева }
    65:if figure.l1>1 then figure.l1:=figure.l1-1;//Смещение влево при нажатии A
    68:if figure.l1<10 then figure.l1:=figure.l1+1;//Смещение вправо при нажатии D
  end;
  //Вызываем переотрисовку
  Draw();
end;


procedure TForm1.Draw();//Процедура переотрисовки
var
  i: Integer;
  j: Integer;
begin
//Отрисовываем игровое поле, предварительно очистив
  Image1.Picture:=nil;
  Image1.Canvas.Brush.Color:=clWhite;
  Image1.Canvas.FillRect(Image1.BoundsRect);
  for i:=1 to 20 do
    for j:= 1 to 10 do
      if field[i,j]<>0 then
        Image1.Canvas.Rectangle(j*30-30,630-i*30,j*30,600-i*30);
//Отрисовываем текущую фигуру
  case figure.vid of
  1:
    Image1.Canvas.Rectangle(figure.l1*30-30,figure.t1*30-30,figure.l1*30,figure.t1*30)
  end;
end;

procedure TForm1.FormShow(Sender: TObject);//При показе формы отрисовываем белый фон
begin
  Image1.Canvas.Brush.Color:=clWhite;
  Image1.Canvas.FillRect(Image1.BoundsRect);
end;

procedure TForm1.Timer1Timer(Sender: TObject);//По щелчку таймера
var
  i: Integer;
  j: Integer;
begin
//Отрисовываем игровое поле, предварительно очистив
  Draw();
//Если фигура достигла "низа" или другой фигуры, то генерируем следующую
  if (figure.t1=20) or (field[20-figure.t1,figure.l1]<>0) then
    begin
      field[20-figure.t1+1,figure.l1]:=figure.vid;//Дополняем поле упавшей фигурой
      figure.t1:=0;//Создание фигуры
    end;
//Сдвигаем фигуру на одну клетку ниже
  Figure.t1:=figure.t1+1;
end;

end.
